                    {{ error.messageKey|trans(error.messageData) }}
                </div>
                {% endif %}
                <div id="login">
                    <input type="text" name="_username" class="form-control" placeholder="{% trans %}Nome UsuÃ¡rio{% endtrans %}" autofocus value="{{ last_username }}">
                    <input type="password" name="_password" class="form-control" placeholder="{% trans %}Senha{% endtrans %}">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">{% trans %}Entrar{% endtrans %}</button>
                </div>
            </form>
        </div>
    </body>
</html>
{% extends "admin.html.twig" %}

{% block adminContent %}
    <h1>
        {% trans %}Locais{% endtrans %}
        <small>
            {% trans %}Cadastro de locais de atendimento{% endtrans %}
        </small>
    </h1>
    
    {{ form_start(form) }}
    
        {% include 'flashMessages.html.twig' %}
    
        {{ form_row(form.nome, { label: 'Nome' }) }}

        <div class="buttons">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check"></i> 
                {% trans %}Salvar{% endtrans %}
            </button>
            <a href="{{ path('admin_locais_index') }}" class="btn btn-secondary">
                <i class="fa fa-chevron-left"></i>
                {% trans %}Voltar{% endtrans %}
            </a>
        </div>

    {{ form_end(form) }}
{% endblock %}
{% extends "admin.html.twig" %}

{% block adminContent %}
    <h1>
        {% trans %}Serviços{% endtrans %}
        <small>
            {% trans %}Cadastro de serviços para atendimento{% endtrans %}
        </small>
    </h1>
        
    <div class="text-right">
        <a href="{{ path('admin_servicos_new') }}" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            {% trans %}Novo serviço{% endtrans %}
        </a>
    </div>
    
    <table class="table table-bordered">
        <thead>
            <th>#</th>
            <th>{% trans %}Nome{% endtrans %}</th>
            <th>{% trans %}Peso{% endtrans %}</th>
            <th>{% trans %}Situação{% endtrans %}</th>
            <th></th>
        </thead>
        <tbody>
            {% for servico in servicos %}
                <tr>
                    <td>
                        {{ servico.id }}
                    </td>
                    <td>
                        {{ servico.nome }}
                    </td>
                    <td>
                        {{ servico.peso }}
                    </td>
                    <td>
                        {% if servico.ativo %}
                            {% trans %}Ativo{% endtrans %}
                        {% else %}
                            {% trans %}Inativo{% endtrans %}
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('admin_servicos_edit', { id: servico.id }) }}" class="btn btn-secondary">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
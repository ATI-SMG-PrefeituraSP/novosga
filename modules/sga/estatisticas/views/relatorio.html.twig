<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{ relatorio.titulo }}</title>
    <link type="text/css" rel="stylesheet" href="{{ baseUrl() }}/css/style.css?v={{ version }}" />
    <link rel="stylesheet" type="text/css" href="{{ baseUrl() }}/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="{{ baseUrl() }}/modules/{{ module.chave }}/css/relatorio.css?v={{ version }}" />
    <link rel="shortcut icon" href="{{ baseUrl() }}/images/favicon.png" />
</head>
<body>
    <div id="report" class="container">
        <div id="report-header">
            <a href="javascript:window.print()" class="print">
                <span class="glyphicon glyphicon-print"></span>
                {% trans %}Imprimir{% endtrans %}
            </a>
            <h1>{{ relatorio.titulo }}</h1>
        </div>
        <div id="report-body">
            {% include page %}
        </div>
        <div id="report-footer">
            <p>{{ relatorio.titulo }} - Novo SGA v{{ version }}</p>
        </div>
    </div>
</body>
</html>
{% extends "admin.html.twig" %}

{% block adminContent %}
    <h1>
        {% trans %}Serviços{% endtrans %}
        <small>
            {% trans %}Cadastro de serviços para atendimento{% endtrans %}
        </small>
    </h1>
    
    {{ form_start(form) }}
    
        {% include 'MangatiBaseBundle:Crud:flashMessages.html.twig' %}
        
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.ativo) }}
            </div>
            <div class="col-md-6">
        
                {{ form_row(form.nome) }}

                {{ form_row(form.descricao) }}

                {{ form_row(form.peso) }}
                
                {% if not entity.isMestre() %}
                    {{ form_row(form.mestre) }}
                {% endif %}
            </div>
            <div class="col-md-6">
                {% if entity.isMestre() %}
                    <fieldset>
                        <legend>{% trans %}Subserviços{% endtrans %}</legend>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>{% trans %}Nome{% endtrans %}</th>
                                    <th>{% trans %}Peso{% endtrans %}</th>
                                    <th class="col-md-2"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for sub in entity.subServicos %}
                                <tr>
                                    <td>{{ sub.nome }}</td>
                                    <td>{{ sub.peso }}</td>
                                    <td>
                                        <a href="{{ path('admin_servicos_edit', {id: sub.id }) }}" class="btn btn-default">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <button class="btn btn-default">
                                            <i class="fa fa-level-up"></i>
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </fieldset>
                {% endif %}
            </div>
        </div>
        
        <div class="buttons">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span> 
                {% trans %}Salvar{% endtrans %}
            </button>
            <a href="{{ path('admin_servicos_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-left"></span> 
                {% trans %}Voltar{% endtrans %}
            </a>
        </div>

    {{ form_end(form) }}
{% endblock %}
{% set unidade = app.request.session.get('unidade') %}

{% if unidade != null %}
    <ul class="nav navbar-nav">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ unidade.nome }} <b class="caret"></b></a>
            <ul class="dropdown-menu">
                {% for module in modules %}
                <li><a href="{{ path(module.homeRoute) }}">{{ module.displayName }}</a></li>
                {% endfor %}
                <li>
                    <a href="#dialog-unidade" data-toggle="modal">
                        {% trans %}Trocar unidade{% endtrans %}
                        &nbsp;<span class="glyphicon glyphicon-transfer"></span>
                    </a>
                </li>
            </ul>
        </li>
    </ul>
{% else %}
    <ul class="nav navbar-nav">
        <li class="dropdown">
            <a href="#dialog-unidade" class="dropdown-toggle" data-toggle="modal">{% trans %}Escolher unidade{% endtrans %}</a>
        </li>
    </ul>
{% endif %}